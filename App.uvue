<script lang="uts">
  // #ifdef APP-ANDROID || APP-HARMONY
	let firstBackTime = 0
  // #endif
	export default {
		onLaunch: function () {
			console.log('WellMate AI 应用启动')
			// 初始化应用数据
			this.initApp()
		},
		onShow: function () {
			console.log('App Show')
		},
		onHide: function () {
