<script setup lang="uts">
import { ref, reactive, onMounted } from 'vue'
import { ChatMessage, ChatSession } from '@/utils/api-service.uts'
import sessionManager from '@/utils/session-manager.uts'
import apiService from '@/utils/api-service.uts'
import { t } from '@/utils/i18n/i18n.uts'

// å“åº”å¼æ•°æ®
const showSessionList = ref(false)
const inputMessage = ref('')
const isLoading = ref(false)
const scrollTop = ref(0)
const currentSessionId = ref<string | null>(null)

const sessions = ref<ChatSession[]>([])
const currentMessages = ref<ChatMessage[]>([])

// å¿«æ·å»ºè®®
const quickSuggestions = [
  'ä»Šå¤©çš„å¥åº·å»ºè®®',
  'åˆ†ææˆ‘çš„ç¡çœ è´¨é‡',
  'å¦‚ä½•æé«˜å…ç–«åŠ›',
  'é€‚åˆæˆ‘çš„è¿åŠ¨è®¡åˆ’'
]

// ç”Ÿå‘½å‘¨æœŸ
onMounted(() => {
  loadSessions()
  // å¦‚æœæ²¡æœ‰å½“å‰ä¼šè¯ï¼Œåˆ›å»ºä¸€ä¸ªæ–°çš„
  if (!currentSessionId.value) {
    createNewSession()
  }
})

// åŠ è½½ä¼šè¯åˆ—è¡¨
const loadSessions = () => {
  // åªåŠ è½½å¥åº·ç±»å‹çš„ä¼šè¯
  sessions.value = sessionManager.getSessions('health')
  
  // è®¾ç½®å½“å‰ä¼šè¯
  const currentSession = sessionManager.getCurrentSession('health')
  if (currentSession) {
    currentSessionId.value = currentSession.id
    currentMessages.value = currentSession.messages
  }
}

// åˆ‡æ¢ä¼šè¯åˆ—è¡¨æ˜¾ç¤º
const toggleSessionList = () => {
  showSessionList.value = !showSessionList.value
}

// åˆ›å»ºæ–°ä¼šè¯
const createNewSession = () => {
  const session = sessionManager.createNewSession(undefined, 'health')
  currentSessionId.value = session.id
  currentMessages.value = []
  loadSessions()
}

// åˆ‡æ¢ä¼šè¯
const switchSession = (sessionId: string) => {
  if (sessionManager.setCurrentSession(sessionId, 'health')) {
    currentSessionId.value = sessionId
    const session = sessionManager.getCurrentSession('health')
    if (session) {
      currentMessages.value = session.messages
    }
    showSessionList.value = false
    scrollToBottom()
  }
}

// åˆ é™¤ä¼šè¯
const deleteSession = (sessionId: string) => {
  // å…³é—­ä¾§è¾¹æ ï¼Œç¡®ä¿ç¡®è®¤æ¡†åœ¨æœ€ä¸Šå±‚æ˜¾ç¤º
  showSessionList.value = false
  
  // ç›´æ¥æ˜¾ç¤ºç¡®è®¤æ¡†
  uni.showModal({
    title: t('delete_confirm'),
    content: t('delete_content'),
    cancelText: t('cancel'),
    confirmText: t('confirm'),
    success: (res) => {
      if (res.confirm) {
        if (sessionManager.deleteSession(sessionId, 'health')) {
          loadSessions()
          // å¦‚æœåˆ é™¤çš„æ˜¯å½“å‰ä¼šè¯ï¼Œåˆ›å»ºæ–°ä¼šè¯
          if (currentSessionId.value === sessionId) {
            createNewSession()
          }
        }
      }
    }
  })
}

// å‘é€æ¶ˆæ¯
const sendMessage = async () => {
  const message = inputMessage.value.trim()
  if (!message || isLoading.value) return
  
  // æ·»åŠ ç”¨æˆ·æ¶ˆæ¯
  const userMessage: ChatMessage = {
    id: 'msg_' + Date.now(),
    role: 'user',
    content: message,
    timestamp: Date.now()
  }
  
  sessionManager.addMessageToCurrentSession(userMessage, 'health')
  currentMessages.value = [...currentMessages.value, userMessage]
  inputMessage.value = ''
  isLoading.value = true
  
  scrollToBottom()
  
  try {
    // è°ƒç”¨APIå‘é€æ¶ˆæ¯
    const response = await apiService.sendMessage(message, currentSessionId.value)
    
    if (response.code === 200 && response.data) {
      const assistantMessage: ChatMessage = {
        id: 'msg_' + Date.now(),
        role: 'assistant',
        content: response.data.content,
        timestamp: Date.now()
      }
      
      sessionManager.addMessageToCurrentSession(assistantMessage, 'health')
      currentMessages.value = [...currentMessages.value, assistantMessage]
    } else {
      // æ¨¡æ‹Ÿå›å¤ï¼ˆå¼€å‘é˜¶æ®µï¼‰
      const mockMessage: ChatMessage = {
        id: 'msg_' + Date.now(),
        role: 'assistant',
        content: `æ”¶åˆ°æ‚¨çš„å¥åº·å’¨è¯¢ï¼š"${message}"ã€‚æˆ‘æ˜¯WellMate AIå¥åº·åŠ©æ‰‹ï¼Œå¯ä»¥ä¸ºæ‚¨æä¾›ä¸“ä¸šçš„å¥åº·å»ºè®®å’Œåˆ†æã€‚`,
        timestamp: Date.now()
      }
      
      sessionManager.addMessageToCurrentSession(mockMessage, 'health')
      currentMessages.value = [...currentMessages.value, mockMessage]
    }
  } catch (error) {
    console.error('å‘é€æ¶ˆæ¯å¤±è´¥:', error)
    
    // é”™è¯¯å¤„ç†
    const errorMessage: ChatMessage = {
      id: 'msg_' + Date.now(),
      role: 'assistant',
      content: 'æŠ±æ­‰ï¼Œæš‚æ—¶æ— æ³•è¿æ¥åˆ°æœåŠ¡ã€‚è¯·æ£€æŸ¥ç½‘ç»œè¿æ¥åé‡è¯•ã€‚',
      timestamp: Date.now()
    }
    
    sessionManager.addMessageToCurrentSession(errorMessage, 'health')
    currentMessages.value = [...currentMessages.value, errorMessage]
  }
  
  isLoading.value = false
  scrollToBottom()
}

// ä½¿ç”¨å¿«æ·å»ºè®®
const useSuggestion = (suggestion: string) => {
  inputMessage.value = suggestion
}

// æ»šåŠ¨åˆ°åº•éƒ¨
const scrollToBottom = () => {
  setTimeout(() => {
    scrollTop.value = 999999 // è¶³å¤Ÿå¤§çš„å€¼ç¡®ä¿æ»šåŠ¨åˆ°åº•éƒ¨
  }, 100)
}

// æ»šåŠ¨äº‹ä»¶
const onScroll = (e: any) => {
  // å¯ä»¥åœ¨è¿™é‡Œå®ç°æ»šåŠ¨åŠ è½½æ›´å¤šæ¶ˆæ¯
}

// æ ¼å¼åŒ–æ—¶é—´
const formatTime = (timestamp: number): string => {
  const date = new Date(timestamp)
  const now = new Date()
  const diff = now.getTime() - timestamp
  
  if (diff < 60 * 1000) {
    return 'åˆšåˆš'
  } else if (diff < 60 * 60 * 1000) {
    return Math.floor(diff / (60 * 1000)) + 'åˆ†é’Ÿå‰'
  } else if (diff < 24 * 60 * 60 * 1000) {
    return Math.floor(diff / (60 * 60 * 1000)) + 'å°æ—¶å‰'
  } else {
    return date.getMonth() + 1 + 'æœˆ' + date.getDate() + 'æ—¥'
  }
}

// è·³è½¬åˆ°å¥åº·æ•°æ®é¡µé¢ï¼ˆé¦–é¡µï¼‰
const navigateToHealth = () => {
  uni.switchTab({
    url: '/pages/index/index'
  })
}

// å½“å‰é€‰ä¸­çš„tab
const currentTab = ref('chat')

// åˆ‡æ¢tab
const switchTab = (tab) => {
  currentTab.value = tab
  if (tab === 'health') {
    uni.redirectTo({
      url: '/pages/index/index'
    })
  } else if (tab === 'mine') {
    uni.redirectTo({
      url: '/pages/mine/mine'
    })
  }
}
</script>

