import { ref, onMounted } from 'vue'

// Êó•ÊúüÁõ∏ÂÖ≥
const currentDate = ref(new Date())
// Ëß¶Êë∏‰∫ã‰ª∂Áõ∏ÂÖ≥
const startY = ref(0)
const moveY = ref(0)
const touchThreshold = 50 // Ëß¶Êë∏ÊªëÂä®ÈòàÂÄº

// ËøõÂ∫¶Êï∞ÊçÆ
const stepProgress = ref(0.75) // 7500/10000
