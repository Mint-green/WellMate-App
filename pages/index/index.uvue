<script setup lang="uts">
import { ref, onMounted } from 'vue'

// Êó•ÊúüÁõ∏ÂÖ≥
const currentDate = ref(new Date('2025-11-19'))
// Ëß¶Êë∏‰∫ã‰ª∂Áõ∏ÂÖ≥
const startY = ref(0)
const moveY = ref(0)
const touchThreshold = 50 // Ëß¶Êë∏ÊªëÂä®ÈòàÂÄº

// ËøõÂ∫¶Êï∞ÊçÆ
const stepProgress = ref(0.8) // 8000/10000
const exerciseProgress = ref(0.85) // 85%

// Ê†ºÂºèÂåñÊó•Êúü‰∏∫ YYYY.MM.DD Ê†ºÂºè
const formatDate = (date) => {
  const year = date.getFullYear()
  const month = String(date.getMonth() + 1).padStart(2, '0')
  const day = String(date.getDate()).padStart(2, '0')
  return `${year}.${month}.${day}`
}

// ÂâçÂæÄÂâç‰∏ÄÂ§©
const goToPrevDay = () => {
  currentDate.value = new Date(currentDate.value.getTime() - 24 * 60 * 60 * 1000)
  updateDataForDate(currentDate.value)
}

// ÂâçÂæÄÂêé‰∏ÄÂ§©
const goToNextDay = () => {
  currentDate.value = new Date(currentDate.value.getTime() + 24 * 60 * 60 * 1000)
  updateDataForDate(currentDate.value)
}

// Èº†Ê†áÊªöËΩÆ‰∫ã‰ª∂Â§ÑÁêÜ
const onWheel = (e) => {
  if (e.deltaY > 0) {
    // Âêë‰∏ãÊªöÂä®ÔºåÂàáÊç¢Âà∞Ââç‰∏ÄÂ§©
    goToPrevDay()
  } else {
    // Âêë‰∏äÊªöÂä®ÔºåÂàáÊç¢Âà∞Âêé‰∏ÄÂ§©
    goToNextDay()
  }
}

// Ëß¶Êë∏‰∫ã‰ª∂Â§ÑÁêÜ
const onTouchStart = (e) => {
  startY.value = e.touches[0].clientY
}

const onTouchMove = (e) => {
  moveY.value = e.touches[0].clientY
}

const onTouchEnd = () => {
  const diffY = moveY.value - startY.value
  if (Math.abs(diffY) > touchThreshold) {
    // Âè™ÊúâÊªëÂä®Ë∑ùÁ¶ªË∂ÖËøáÈòàÂÄºÊâçÂ§ÑÁêÜ
    if (diffY > 0) {
      // Âêë‰∏ãÊªëÂä®ÔºåÂàáÊç¢Âà∞Ââç‰∏ÄÂ§©
      goToPrevDay()
    } else {
      // Âêë‰∏äÊªëÂä®ÔºåÂàáÊç¢Âà∞Âêé‰∏ÄÂ§©
      goToNextDay()
    }
  }
  // ÈáçÁΩÆËß¶Êë∏‰ΩçÁΩÆ
  startY.value = 0
  moveY.value = 0
}

// Ê†πÊçÆÊó•ÊúüÊõ¥Êñ∞Êï∞ÊçÆÔºàÊ®°ÊãüÔºâ
const updateDataForDate = (date) => {
  // ËøôÈáåÂèØ‰ª•Ê†πÊçÆÊó•Êúü‰ªéÊúçÂä°Âô®Ëé∑ÂèñÊï∞ÊçÆ
  // ÁõÆÂâç‰ΩøÁî®Âõ∫ÂÆöÊï∞ÊçÆ
  stepProgress.value = 0.8 // 80%
  exerciseProgress.value = 0.1 // 30%
}



// È°µÈù¢ÊòæÁ§∫Êó∂ÂàùÂßãÂåñÊï∞ÊçÆ
