<template>
  <view class="login-container">
    <view class="login-header">
      <image class="logo" src="/static/logo_noname.png" mode="aspectFit"></image>
      <text class="app-name">WellMate</text>
      <text class="slogan">{{ $t('app.slogan') }}</text>
    </view>
    
    <view class="login-form">
      <view class="form-group">
        <text class="form-label">{{ $t('username') }}</text>
        <input 
          class="form-input" 
          type="text" 
          v-model="username" 
          :placeholder="$t('enter_username')"
          placeholder-class="placeholder"
        />
      </view>
      
      <view class="form-group">
        <text class="form-label">{{ $t('password') }}</text>
        <input 
          class="form-input" 
          type="password" 
          v-model="password" 
          :placeholder="$t('enter_password')"
          placeholder-class="placeholder"
        />
      </view>
      
      <button 
        class="login-btn" 
        @click="login"
      >
        {{ $t('login_btn') }}
      </button>
      
      <view class="form-footer">
        <text class="register" @click="register">{{ $t('register_link') }}</text>
      </view>
    </view>
  </view>
</template>

<script setup>
import { ref } from 'vue'

// 登录表单数据
const username = ref('')
const password = ref('')

// 登录方法
const login = () => {
  // 添加用户名和密码验证
  if (!username.value) {
    uni.showToast({
      title: $t('enter_username'),
      icon: 'none'
    })
    return
  }
  
  if (!password.value) {
    uni.showToast({
      title: $t('enter_password'),
      icon: 'none'
    })
    return
  }
  
  // 这里可以添加实际的登录逻辑，例如调用API
  console.log('登录请求:', { username: username.value, password: password.value })
  
  // 模拟登录成功
  uni.setStorageSync('isLoggedIn', true)
  uni.setStorageSync('username', username.value)
  
  // 登录成功后跳转到数据概要页面
  uni.switchTab({
    url: '/pages/index/index'
  })
}

// 注册方法
const register = () => {
  uni.navigateTo({
    url: '/pages/register/register'
  })
}
</script>

