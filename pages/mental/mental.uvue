}

// ÂàáÊç¢‰ºöËØù
const switchSession = (session_id: string) => {
  if (sessionManager.setCurrentSession(session_id, 'mental')) {
    currentSessionId.value = session_id
    const session = sessionManager.getCurrentSession('mental')
    if (session) {
      currentSessionTitle.value = session.title
      currentMessages.value = session.messages
    }
    sessionId = null // ÈáçÁΩÆsessionId
    showSessionList.value = false
    scrollToBottom()
  }
}

// Âà†Èô§‰ºöËØù
const deleteSession = (sessionId: string) => {
  // ÂÖ≥Èó≠‰æßËæπÊ†èÔºåÁ°Æ‰øùÁ°ÆËÆ§Ê°ÜÂú®ÊúÄ‰∏äÂ±ÇÊòæÁ§∫
  showSessionList.value = false
  
  // Áõ¥Êé•ÊòæÁ§∫Á°ÆËÆ§Ê°Ü
  uni.showModal({
    title: t('delete_confirm'),
    content: t('delete_content'),
    cancelText: t('cancel'),
    confirmText: t('confirm'),
    success: (res) => {
      if (res.confirm) {
        if (sessionManager.deleteSession(sessionId, 'mental')) {
          loadSessions()
          // Â¶ÇÊûúÂà†Èô§ÁöÑÊòØÂΩìÂâç‰ºöËØùÔºåÂàõÂª∫Êñ∞‰ºöËØù
          if (currentSessionId.value === sessionId) {
            createNewSession()
          }
        }
      }
    }
  })
}

// ÂèëÈÄÅÊ∂àÊÅØ
const sendMessage = async () => {
  const message = inputMessage.value.trim()
  if (!message || isLoading.value) return
  
  // Ê∑ªÂä†Áî®Êà∑Ê∂àÊÅØ
  const userMessage: ChatMessage = {
    id: 'msg_' + Date.now(),
    role: 'user',
    content: message,
    timestamp: Date.now()
  }
  
  sessionManager.addMessageToCurrentSession(userMessage, 'mental')
  currentMessages.value = [...currentMessages.value, userMessage]
  inputMessage.value = ''
  isLoading.value = true
  
  scrollToBottom()
  
  try {
    // Ë∞ÉÁî®APIÂèëÈÄÅÊ∂àÊÅØÔºåÁ¨¨‰∏ÄËΩÆÂØπËØù‰∏ç‰º†ÈÄísession_id
    const requestData: any = {
      text: message
    };
    
    // Â¶ÇÊûúÂ≠òÂú®‰ºöËØùIDÔºåÂàôÊ∑ªÂä†Âà∞ËØ∑Ê±Ç‰∏≠
    if (sessionId) {
      requestData.session_id = sessionId;
    }
    
    const response = await apiService.sendMentalMessage(message, sessionId)
    
    // Êõ¥Êñ∞‰ºöËØùID
    if (response && response.data && response.data.session_id) {
      sessionId = response.data.session_id;
    }
    
    // Ê£ÄÊü•ÂìçÂ∫îÁªìÊûÑÂπ∂ÊèêÂèñÂÜÖÂÆπ
        let content = '';
        if (response && response.data && response.data.response) {
          content = response.data.response;
        } else if (response && response.data && response.data.content) {
          content = response.data.content;
        } else if (response && response.content) {
          content = response.content;
        } else {
          content = 'ÊÑüË∞¢ÊÇ®ÁöÑÂí®ËØ¢ÔºåÊàëÂ∑≤ÁªèÊî∂Âà∞‰∫ÜÊÇ®ÁöÑÊ∂àÊÅØ„ÄÇ';
        }
        
        // ÂâîÈô§Êã¨Âè∑()ÂèäÂÖ∂ÂåÖË£πÁöÑÂÜÖÂÆπ
        content = content.replace(/\([^)]*\)/g, '');
    
    const assistantMessage: ChatMessage = {
      id: 'msg_' + Date.now(),
      role: 'assistant',
      content: content,
      timestamp: Date.now()
    }
    
    sessionManager.addMessageToCurrentSession(assistantMessage, 'mental')
    currentMessages.value = [...currentMessages.value, assistantMessage]
  } catch (error) {
    console.error('ÂèëÈÄÅÊ∂àÊÅØÂ§±Ë¥•:', error)
    
    // ÈîôËØØÂ§ÑÁêÜ
    const errorMessage: ChatMessage = {
      id: 'msg_' + Date.now(),
      role: 'assistant',
      content: 'Êä±Ê≠âÔºåÊöÇÊó∂Êó†Ê≥ïËøûÊé•Âà∞ÊúçÂä°„ÄÇËØ∑Ê£ÄÊü•ÁΩëÁªúËøûÊé•ÂêéÈáçËØï„ÄÇ',
      timestamp: Date.now()
    }
    
    sessionManager.addMessageToCurrentSession(errorMessage, 'mental')
    currentMessages.value = [...currentMessages.value, errorMessage]
  }
  
  isLoading.value = false
  scrollToBottom()
}

