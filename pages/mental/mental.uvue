// Âø´Êç∑Âª∫ËÆÆ
const quickSuggestions = [
  'ÊÑüÂà∞ÁÑ¶ËôëÊÄé‰πàÂäû',
  'Â¶Ç‰ΩïÁºìËß£ÂéãÂäõ',
  'ÊîπÂñÑÁù°Áú†Ë¥®Èáè',
  '‰øùÊåÅÊÉÖÁª™Á®≥ÂÆö'
]

// ÁîüÂëΩÂë®Êúü
onMounted(() => {
