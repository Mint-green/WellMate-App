// ËØ≠Èü≥Êí≠ÊîæÂäüËÉΩ - ÊîØÊåÅ‰∏§ÁßçÊñπÊ°àÂàáÊç¢
const useNewTTSApi = ref(true); // true‰ΩøÁî®Êñ∞Êé•Âè£Ôºåfalse‰ΩøÁî®ÂéüÊñπÊ°à

const playVoice = async (text: string) => {
  // ÂâîÈô§emojiË°®ÊÉÖÁ¨¶Âè∑
  const cleanText = text.replace(/[\u{1F600}-\u{1F64F}]|[\u{1F300}-\u{1F5FF}]|[\u{1F680}-\u{1F6FF}]|[\u{1F1E0}-\u{1F1FF}]|[\u{2600}-\u{26FF}]|[\u{2700}-\u{27BF}]/gu, '');
  
  if (useNewTTSApi.value) {
    // ‰ΩøÁî®Êñ∞ÁöÑAPIÊé•Âè£
    try {
      // ÊòæÁ§∫Âä†ËΩΩÊèêÁ§∫
      uni.showLoading({
        title: 'Generating audio...'
      });
      
      // Ë∞ÉÁî®Êñ∞ÁöÑÊñáÊú¨ËΩ¨ËØ≠Èü≥Êé•Âè£
      const response = await uni.request({
        url: 'http://47.113.206.45:6001/text-to-speech',
        method: 'POST',
        header: {
          'Content-Type': 'application/json'
        },
        data: {
          input: cleanText
        },
        responseType: 'arraybuffer' // ÈáçË¶ÅÔºöÊåáÂÆöÂìçÂ∫îÁ±ªÂûã‰∏∫arraybuffer‰ª•Êé•Êî∂Èü≥È¢ëÊï∞ÊçÆ
      });
      
      uni.hideLoading();
      
      if (response.statusCode === 200) {
        // ÂàõÂª∫Èü≥È¢ë‰∏ä‰∏ãÊñáÊí≠ÊîæÈü≥È¢ë
        const innerAudioContext = uni.createInnerAudioContext();
        // Â∞ÜarraybufferËΩ¨Êç¢‰∏∫base64
        const base64 = arrayBufferToBase64(response.data);
        innerAudioContext.src = `data:audio/wav;base64,${base64}`;
        innerAudioContext.play();
        
        innerAudioContext.onError((res) => {
          console.error('Audio playback failed:', res.errMsg);
          uni.showToast({
            title: 'Playback failed',
            icon: 'none'
          });
        });
      } else {
        uni.showToast({
          title: 'Audio generation failed',
          icon: 'none'
        });
      }
    } catch (error) {
      uni.hideLoading();
      console.error('TTS API call failed:', error);
      uni.showToast({
        title: 'API call failed',
        icon: 'none'
      });
    }
  } else {
    // ÂéüÊñπÊ°àÔºö‰ΩøÁî®ÊµèËßàÂô®ËØ≠Èü≥ÂêàÊàêAPI
    if ('speechSynthesis' in window) {
      const speech = new SpeechSynthesisUtterance(cleanText);
      speech.lang = 'zh-CN'; // ËÆæÁΩÆËØ≠Ë®Ä‰∏∫‰∏≠Êñá
      speech.rate = 1; // ËØ≠ÈÄü
      speech.pitch = 1; // Èü≥Ë∞É
      speech.volume = 1; // Èü≥Èáè
      speechSynthesis.speak(speech);
    } else {
      uni.showToast({
        title: 'Device does not support voice playback',
        icon: 'none'
      });
    }
  }
}

// ArrayBufferËΩ¨Base64
const arrayBufferToBase64 = (buffer: ArrayBuffer): string => {
  let binary = '';
  const bytes = new Uint8Array(buffer);
  const len = bytes.byteLength;
  for (let i = 0; i < len; i++) {
    binary += String.fromCharCode(bytes[i]);
  }
  return btoa(binary);
}

