// Âø´Êç∑Âª∫ËÆÆ
const quickSuggestions = [
  'Â§¥ÁóõÊÄé‰πàÂäû',
  'Â¶Ç‰ΩïÊîπÂñÑÁù°Áú†',
  'Êé®ËçêÂÅ•Â∫∑È•ÆÈ£ü',
  'ËøêÂä®ÂêéËÇåËÇâÈÖ∏Áóõ'
]

// ÁîüÂëΩÂë®Êúü
onMounted(() => {
  loadSessions()
