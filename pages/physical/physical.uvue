  }
})

// Âä†ËΩΩ‰ºöËØùÂàóË°®
const loadSessions = () => {
  // Âè™Âä†ËΩΩÂÅ•Â∫∑Âä©ÊâãÁ±ªÂûãÁöÑ‰ºöËØù
  sessions.value = sessionManager.getSessions('health')
  
  // ËÆæÁΩÆÂΩìÂâç‰ºöËØù
  const currentSession = sessionManager.getCurrentSession('health')
  if (currentSession) {
    currentSessionId.value = currentSession.id
    currentSessionTitle.value = currentSession.title
    currentMessages.value = currentSession.messages
  }
}

// ÂàáÊç¢‰ºöËØùÂàóË°®ÊòæÁ§∫
const toggleSessionList = () => {
  showSessionList.value = !showSessionList.value
}

// ÂàõÂª∫Êñ∞‰ºöËØù
const createNewSession = () => {
  const session = sessionManager.createNewSession(undefined, 'health')
  currentSessionId.value = session.id
  currentSessionTitle.value = session.title
  currentMessages.value = []
  loadSessions()
  
  // Ê∏ÖÈô§API‰ºöËØùIDÔºå‰ª•‰æøÂºÄÂßãÊñ∞ÁöÑÂØπËØù
  sessionId = null
}

// ÂàáÊç¢‰ºöËØù
const switchSession = (sessionId: string) => {
  if (sessionManager.setCurrentSession(sessionId, 'health')) {
    currentSessionId.value = sessionId
    const session = sessionManager.getCurrentSession('health')
    if (session) {
      currentSessionTitle.value = session.title
      currentMessages.value = session.messages
    }
    showSessionList.value = false
    scrollToBottom()
  }
}

// Âà†Èô§‰ºöËØù
const deleteSession = (sessionId: string) => {
  // ÂÖ≥Èó≠‰æßËæπÊ†èÔºåÁ°Æ‰øùÁ°ÆËÆ§Ê°ÜÂú®ÊúÄ‰∏äÂ±ÇÊòæÁ§∫
  showSessionList.value = false
  
  // Áõ¥Êé•ÊòæÁ§∫Á°ÆËÆ§Ê°Ü
  uni.showModal({
    title: t('delete_confirm'),
    content: t('delete_content'),
    cancelText: t('cancel'),
    confirmText: t('confirm'),
    success: (res) => {
      if (res.confirm) {
        if (sessionManager.deleteSession(sessionId, 'health')) {
          loadSessions()
          // Â¶ÇÊûúÂà†Èô§ÁöÑÊòØÂΩìÂâç‰ºöËØùÔºåÂàõÂª∫Êñ∞‰ºöËØù
          if (currentSessionId.value === sessionId) {
            createNewSession()
          }
        }
      }
    }
  })
}

// ÂèëÈÄÅÊ∂àÊÅØ
const sendMessage = async () => {
  const message = inputMessage.value.trim()
  if (!message || isLoading.value) return
  
  // Ê∑ªÂä†Áî®Êà∑Ê∂àÊÅØ
  const userMessage: ChatMessage = {
    id: 'msg_' + Date.now(),
    role: 'user',
    content: message,
    timestamp: Date.now()
  }
  console.log('userMessage', userMessage)
  
  sessionManager.addMessageToCurrentSession(userMessage, 'health')
  currentMessages.value = [...currentMessages.value, userMessage]
  inputMessage.value = ''
  isLoading.value = true
  
  scrollToBottom()
  
  try {
    // Ë∞ÉÁî®Êñ∞ÁöÑAPIÂèëÈÄÅÊ∂àÊÅØ
    const requestData: any = {
      text: message
    };
    
    // Â¶ÇÊûúÂ≠òÂú®‰ºöËØùIDÔºåÂàôÊ∑ªÂä†Âà∞ËØ∑Ê±Ç‰∏≠
    if (sessionId) {
      requestData.session_id = sessionId;
    }
    
    const response = await uni.request({
      url: `${apiConfig.baseURL}${apiConfig.healthAPIPrefix}/chat`,
      method: 'POST',
      data: requestData,
      header: {
        'Authorization': `Bearer ${ACCESS_TOKEN}`,
        'Content-Type': 'application/json'
      }
    });
    
    // Â§ÑÁêÜÂìçÂ∫î
    if (response.statusCode === 200 && response.data) {
      const responseData = response.data as any;
      console.log('responseData', responseData)
      
      // Êõ¥Êñ∞‰ºöËØùID
      if (responseData.data && responseData.data.session_id) {
        sessionId = responseData.data.session_id;
      }
      
      const assistantMessage: ChatMessage = {
        id: 'msg_' + Date.now(),
        role: 'assistant',
        content: responseData.data.response,
        timestamp: Date.now()
      }
      
      sessionManager.addMessageToCurrentSession(assistantMessage, 'health')
      currentMessages.value = [...currentMessages.value, assistantMessage]
    } else {
      // ÈîôËØØÂ§ÑÁêÜ
      const errorMessage: ChatMessage = {
        id: 'msg_' + Date.now(),
        role: 'assistant',
        content: 'Êä±Ê≠âÔºåÊöÇÊó∂Êó†Ê≥ïËøûÊé•Âà∞ÊúçÂä°„ÄÇËØ∑Ê£ÄÊü•ÁΩëÁªúËøûÊé•ÂêéÈáçËØï„ÄÇ',
        timestamp: Date.now()
      }

      
      sessionManager.addMessageToCurrentSession(errorMessage, 'health')
      currentMessages.value = [...currentMessages.value, errorMessage]
    }
  } catch (error) {
    console.error('ÂèëÈÄÅÊ∂àÊÅØÂ§±Ë¥•:', error)
    
    // ÈîôËØØÂ§ÑÁêÜ
    const errorMessage: ChatMessage = {
      id: 'msg_' + Date.now(),
      role: 'assistant',
      content: 'Êä±Ê≠âÔºåÊöÇÊó∂Êó†Ê≥ïËøûÊé•Âà∞ÊúçÂä°„ÄÇËØ∑Ê£ÄÊü•ÁΩëÁªúËøûÊé•ÂêéÈáçËØï„ÄÇ',
      timestamp: Date.now()
    }
    
    sessionManager.addMessageToCurrentSession(errorMessage, 'health')
    currentMessages.value = [...currentMessages.value, errorMessage]
  }
  
  isLoading.value = false
  scrollToBottom()
}

