  <view class="register-container">
    <view class="register-header">
      <view class="header">
        <text class="back-icon" @click="goBack">‹</text>
        <text class="title">{{ $t('register_title') }}</text>
      </view>
      <image class="logo" src="/static/logo_noname.png" mode="aspectFit"></image>
