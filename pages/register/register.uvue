<script setup>
import { ref, computed, onMounted } from 'vue'
// 导入国际化工具
import { t, getCurrentLanguage } from '@/utils/i18n/i18n.uts'

// 暴露t函数给模板使用
const $t = t

// 添加调试信息
onMounted(() => {
  console.log('Current language:', getCurrentLanguage())
  console.log('Translation test - register_title:', $t('register_title'))
  console.log('Translation test - app.slogan:', $t('app.slogan'))
  console.log('Translation test - register_btn:', $t('register_btn'))
})

// 注册表单数据
const username = ref('')
const password = ref('')
const confirmPassword = ref('')

// 简化表单验证（可选，当前已移除按钮禁用状态）
const isFormValid = computed(() => {
  return true // 暂时返回true，确保按钮可以点击
})

// 返回登录页面
const goBack = () => {
  uni.navigateBack()
}

// 注册方法
const register = () => {
  console.log('Register function called')
  
  // 简单表单验证
  if (!username.value.trim()) {
    uni.showToast({ title: '请输入用户名', icon: 'none' })
    return
  }
  if (password.value !== confirmPassword.value) {
    uni.showToast({ title: '两次输入的密码不一致', icon: 'none' })
    return
  }
  
  // 模拟注册成功
    uni.showToast({
        title: $t('register_success'),
        icon: 'success'
      })
  
  // 直接跳转到登录页面
  setTimeout(() => {
    uni.navigateTo({
      url: '/pages/login/login',
      success: () => {
        console.log('Navigation success')
      },
      fail: (err) => {
        console.log('Navigation failed:', err)
        // 如果navigateTo失败，尝试使用redirectTo
        uni.redirectTo({
          url: '/pages/login/login'
        })
      }
    })
  }, 1000)
}
</script>

